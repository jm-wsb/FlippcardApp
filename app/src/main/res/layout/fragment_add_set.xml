<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwa pakietu">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextSetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Wybierz kolor wyróżniający:"
        android:textAppearance="?attr/textAppearanceSubtitle1" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioGroup
            android:id="@+id/radioGroupColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Colors will be represented by RadioButtons with custom backgrounds in a real app,
                 here we use simple ones for demo -->
            <RadioButton android:id="@+id/radioRed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Czerwony" android:textColor="#FF0000" />
            <RadioButton android:id="@+id/radioBlue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Niebieski" android:textColor="#0000FF" />
            <RadioButton android:id="@+id/radioGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zielony" android:textColor="#00FF00" />
            <RadioButton android:id="@+id/radioYellow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Żółty" android:textColor="#FFFF00" />
        </RadioGroup>
    </HorizontalScrollView>

    <Button
        android:id="@+id/buttonSaveSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Utwórz pakiet" />

</LinearLayout>
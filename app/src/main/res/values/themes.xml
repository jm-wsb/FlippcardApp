<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlippcardApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#EADDFF</item>
        <item name="colorOnPrimaryContainer">#21005D</item>

        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customizing rounded corners -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Flippcard.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Flippcard.MediumComponent</item>

        <!-- Styles for AppBar and Toolbar -->
        <item name="appBarLayoutStyle">@style/Widget.Flippcard.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.Flippcard.Toolbar</item>
    </style>

    <style name="Theme.FlippcardApp" parent="Base.Theme.FlippcardApp" />

    <style name="Widget.Flippcard.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Flippcard.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.Flippcard.AppBar" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="ShapeAppearance.Flippcard.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Flippcard.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">24dp</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/setListFragment">

    <fragment
        android:id="@+id/setListFragment"
        android:name="com.example.flippcardapp.ui.SetListFragment"
        android:label="Pakiety fiszek"
        tools:layout="@layout/fragment_set_list">
        <action
            android:id="@+id/action_setListFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_setListFragment_to_addSetFragment"
            app:destination="@id/addSetFragment" />
        <action
            android:id="@+id/action_setListFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.flippcardapp.ui.ListFragment"
        tools:layout="@layout/fragment_list">
        <argument
            android:name="setId"
            app:argType="integer" />
        <action
            android:id="@+id/action_listFragment_to_addFlashcardFragment"
            app:destination="@id/addFlashcardFragment" />
        <action
            android:id="@+id/action_listFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>

    <dialog
        android:id="@+id/addSetFragment"
        android:name="com.example.flippcardapp.ui.AddSetFragment"
        android:label="Nowy pakiet"
        tools:layout="@layout/fragment_add_set" />

    <dialog
        android:id="@+id/addFlashcardFragment"
        android:name="com.example.flippcardapp.ui.AddFlashcardFragment"
        android:label="Dodaj fiszkÄ™"
        tools:layout="@layout/fragment_add_flashcard">
        <argument
            android:name="setId"
            app:argType="integer" />
    </dialog>

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.flippcardapp.ui.QuizFragment"
        android:label="Quiz"
        tools:layout="@layout/fragment_quiz">
        <argument
            android:name="setId"
            app:argType="integer" />
    </fragment>

</navigation>

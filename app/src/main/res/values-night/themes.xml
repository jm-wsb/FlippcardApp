<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night mode. -->
    <style name="Base.Theme.FlippcardApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#D0BCFF</item>
        <item name="colorOnPrimary">#381E72</item>
        <item name="colorPrimaryContainer">#4F378B</item>
        <item name="colorOnPrimaryContainer">#EADDFF</item>

        <item name="colorSecondary">#CCC2DC</item>
        <item name="colorOnSecondary">#332D41</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Customizing rounded corners -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Flippcard.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Flippcard.MediumComponent</item>

        <!-- Styles for AppBar and Toolbar -->
        <item name="appBarLayoutStyle">@style/Widget.Flippcard.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.Flippcard.Toolbar</item>
    </style>
</resources>